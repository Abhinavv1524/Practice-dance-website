extends base.pug
block scripts 
    script(src="../static/scripts.js")
block style 
    style 
        include ../static/styleContact.css
        include ../static/style.css
        

block content
    div#container
        h1 Fill This Contact Form
        div#form
            form(action="/contact", method="post" class="myform")
                input(type="text" name='text' class='text' placeholder="enter your name") 
                input(type="phone" name='phone' class='phone' placeholder="enter your phone") 
                input(type="email" name='email' class='email' placeholder="enter your email") 
                input(type="text" name='age' class='age' placeholder="enter your age") 
                input(type="submit", name='submit' value='submit' id="btn")